{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.4",
  "body": [
    {
      "type": "Container",
      "style": "emphasis",
      "bleed": true,
      "items": [
        {
          "type": "TextBlock",
          "text": "${name}",
          "wrap": true,
          "weight": "bolder",
          "size": "large"
        },
        {
          "type": "TextBlock",
          "text": "${description}",
          "wrap": true,
          "spacing": "small",
          "isSubtle": true
        }
      ]
    },
    {
      "type": "ColumnSet",
      "spacing": "medium",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "url": "${pictureUrl}",
              "altText": "${name}",
              "size": "large",
              "style": "person"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "Featured Menu Item",
              "weight": "bolder",
              "wrap": true
            },
            {
              "type": "RichTextBlock",
              "spacing": "small",
              "inlines": [
                {
                  "type": "TextRun",
                  "text": "Price: ",
                  "weight": "bolder"
                },
                {
                  "type": "TextRun",
                  "text": "$",
                  "weight": "bolder"
                },
                {
                  "type": "TextRun",
                  "text": "${price}",
                  "weight": "bolder"
                }
              ]
            },
            {
              "type": "TextBlock",
              "text": "Code: ${code}",
              "wrap": true,
              "spacing": "medium",
              "isSubtle": true
            },
            {
              "type": "TextBlock",
              "text": "Item ID: ${id}",
              "wrap": true,
              "spacing": "small"
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "spacing": "medium",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Container",
              "style": "good",
              "bleed": false,
              "items": [
                {
                  "type": "TextBlock",
                  "text": "In Stock",
                  "weight": "bolder"
                },
                {
                  "type": "TextBlock",
                  "text": "${inStock}",
                  "size": "large",
                  "weight": "bolder"
                }
              ]
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Container",
              "style": "attention",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Minimum Stock",
                  "weight": "bolder"
                },
                {
                  "type": "TextBlock",
                  "text": "${minStock}",
                  "size": "medium",
                  "weight": "bolder"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "separator": true,
      "spacing": "medium",
      "items": [
        {
          "type": "TextBlock",
          "text": "Keep inventory above the minimum to avoid stockouts.",
          "isSubtle": true,
          "wrap": true
        }
      ]
    }
  ]
}